rules_version = '2';

// Directive Check: RBAC for secure-docs bucket
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user has admin role
    function isAdmin() {
      return request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if investor has signed NDA
    function isNDASigned() {
      return request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.ndaSigned == true;
    }

    // Default Bucket Rules
    match /{allPaths=**} {
      allow read, write: if isAdmin();
      allow read: if request.auth != null && isNDASigned();
    }

    // Secure Docs Specific (if named bucket is used)
    match /b/secure-docs/o {
       match /{allPaths=**} {
        allow read, write: if isAdmin();
        allow read: if isNDASigned();
      }
    }
  }
}
