rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User Profiles: Users can read/write their own; Admins can read all.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Audit Logs: Append-only for all; Readable only by admins.
    match /audit_logs/{logId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Secure Files: Metadata readable by all authenticated; Writable only by admins.
    // Investors can only read if they have signed the NDA (checked via user profile).
    match /files/{fileId} {
      allow read: if request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.ndaSigned == true
      );
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
